# =============================================================================
# COMMON DATABASE CONFIGURATION
# All microservices use the same MySQL credentials but different databases
# =============================================================================
DB_USERNAME=your_database_username
DB_PASSWORD=your_database_password

# =============================================================================
# DATABASE URLS (Each service has its own database)
# =============================================================================
DB_URL_AUTH=jdbc:mysql://localhost:3306/auth_db?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
DB_URL_BOOKS=jdbc:mysql://localhost:3306/books_db?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
DB_URL_CATEGORY=jdbc:mysql://localhost:3306/category_db?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
DB_URL_INVENTORY=jdbc:mysql://localhost:3306/inventory_db?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
DB_URL_PRICE=jdbc:mysql://localhost:3306/price_db?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
DB_URL_REVIEWS=jdbc:mysql://localhost:3306/reviews_db?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true

# =============================================================================
# JWT CONFIGURATION (Shared between auth-service and api-gateway)
# Generate a secure random key for production (minimum 256 bits)
# =============================================================================
JWT_SECRET=your_jwt_secret_key_minimum_256_bits
JWT_EXPIRATION=86400000

# =============================================================================
# GOOGLE OAUTH2 CONFIGURATION (Shared between auth-service and api-gateway)
# Get credentials from: https://console.cloud.google.com/
# =============================================================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
# OAuth2 redirect URI through API Gateway (for production/Docker deployment)
GOOGLE_REDIRECT_URI=http://localhost:9090/login/oauth2/code/google

# =============================================================================
# EMAIL CONFIGURATION (Gmail SMTP with App Password - for auth-service)
# To generate Gmail App Password: https://myaccount.google.com/apppasswords
# =============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_google_app_password

# =============================================================================
# EUREKA CONFIGURATION (Service Discovery)
# =============================================================================
EUREKA_URL=http://localhost:8761/eureka/
EUREKA_PORT=8761

# =============================================================================
# SERVICE PORTS
# =============================================================================
AUTH_SERVICE_PORT=8080
BOOK_SERVICE_PORT=8000
CATEGORY_SERVICE_PORT=8100
PRICE_SERVICE_PORT=8200
INVENTORY_SERVICE_PORT=8300
REVIEW_SERVICE_PORT=8500
API_GATEWAY_PORT=9090

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
BASE_URL=http://localhost:9090
# Frontend URL for OAuth2 redirects (Streamlit default port is 8501)
# For Streamlit Cloud deployment, use your Streamlit app URL
FRONTEND_URL=http://localhost:8501
